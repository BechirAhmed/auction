<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddProductActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="Name:"
        android:id="@+id/productName"
        android:layout_alignBottom="@+id/inputProductName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:id="@+id/inputProductName"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/productName"
        android:layout_alignLeft="@+id/inputProductPrice"
        android:layout_alignStart="@+id/inputProductPrice"
        android:text="Enter product name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="Price:"
        android:id="@+id/productPrice"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/productName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:id="@+id/inputProductPrice"
        android:layout_gravity="right"
        android:layout_alignBottom="@+id/productPrice"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/productRealPrice"
        android:layout_toRightOf="@+id/productRealPrice"
        android:text="Enter product price" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="Real Price :"
        android:id="@+id/productRealPrice"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/productPrice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:id="@+id/inputRealPrice"
        android:layout_gravity="right"
        android:layout_alignBottom="@+id/productRealPrice"
        android:layout_alignRight="@+id/inputProductPrice"
        android:layout_alignEnd="@+id/inputProductPrice"
        android:layout_toRightOf="@+id/productRealPrice"
        android:layout_toEndOf="@+id/productRealPrice"
        android:text="Enter product real price" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="Image URL:"
        android:id="@+id/productImageUrl"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/productRealPrice" />

    <EditText
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:id="@+id/inputImageURL"
        android:layout_gravity="right"
        android:layout_alignBottom="@+id/productImageUrl"
        android:layout_alignRight="@+id/inputRealPrice"
        android:layout_alignEnd="@+id/inputRealPrice"
        android:layout_toRightOf="@+id/productImageUrl"
        android:layout_toEndOf="@+id/productImageUrl"
        android:text="Enter product image URL" />

    <EditText
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:id="@+id/inputDescription"
        android:layout_gravity="right"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/inputRealPrice"
        android:layout_alignEnd="@+id/inputRealPrice"
        android:layout_toRightOf="@+id/productImageUrl"
        android:layout_toEndOf="@+id/productImageUrl"
        android:text="Enter product description" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="Description:"
        android:id="@+id/productDescription"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add product"
        android:id="@+id/productAddProduct"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/inputDescription"
        android:layout_centerHorizontal="true" />

</RelativeLayout>